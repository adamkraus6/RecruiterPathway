@model RecruiterPathway.Models.RecruiterViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Recruiter.Id" />
            <div class="form-group">
                <label asp-for="Recruiter.Name" class="control-label"></label>
                <input asp-for="Recruiter.Name" class="form-control" />
                <span asp-validation-for="Recruiter.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Recruiter.CompanyName" class="control-label"></label>
                <input asp-for="Recruiter.CompanyName" class="form-control" />
                <span asp-validation-for="Recruiter.CompanyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Recruiter.UserName" class="control-label"></label>
                <input asp-for="Recruiter.UserName" class="form-control" />
                <span asp-validation-for="Recruiter.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Recruiter.PhoneNumber" class="control-label"></label>
                <input asp-for="Recruiter.PhoneNumber" class="form-control" />
                <span asp-validation-for="Recruiter.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
