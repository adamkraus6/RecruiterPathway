@model RecruiterPathway.ViewModels.RecruiterViewModel

@{
    ViewData["Title"] = "All Recruiters List";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Recruiters[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recruiters[0].CompanyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recruiters[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recruiters[0].PhoneNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Recruiters) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Profile" asp-route-id="@item.Id">Profile</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
