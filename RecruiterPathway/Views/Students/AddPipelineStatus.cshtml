@model RecruiterPathway.ViewModels.StudentViewModel
@{
    ViewData["Title"] = "Add Pipeline Status";
}

<h1>Set Pipeline Status</h1>
<h3>@Html.DisplayFor(model => model.Student.FirstName) @Html.DisplayFor(model => model.Student.LastName)</h3>
<form asp-controller="Students" asp-action="AddPipelineStatus">
    <p>
        <select asp-for="PipelineStatus">
            <option>Phone Interview</option>
            <option>In Person Interview</option>
            <option>Technical Interview</option>
            <option>Potential Candidate</option>
        </select>
        <input type="submit" value="Add Pipeline Status" />
    </p>
</form>